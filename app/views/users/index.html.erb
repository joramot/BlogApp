<h1>Users</h1>
<div>
  <% @users.each do |user| %>
    <%= link_to user do %>
      <div>
        <div>
          <%= image_tag user.photo %>
        </div>
        <div>
          <h1><%= user.name %></h1>
          <h3>Number of posts: <%= user.posts_counter %></h3>
        </div>
      </div>
    <% end %>
  <% end %>
</div>