<div class="users">
  <% @users.each do |user| %>
    <%= link_to user do %>
      <div class="user">
        <div class="user-image">
          <%= image_tag user.photo ? user.photo : 'https://picsum.photos/100' %>
        </div>
        <div class="user-info">
          <h1><%= user.name %></h1>
          <h3>Number of posts: <%= user.posts_counter %></h3>
        </div>
      </div>
    <% end %>
  <% end %>
</div>