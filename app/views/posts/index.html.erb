<div>
    <div class='btn-container'><%= link_to "Back to User", @user, class:'back' %></div>
    <div class="user">
        <div class="user-image">
            <%= image_tag @user.photo ? @user.photo : 'https://picsum.photos/100' %>
        </div>
        <div class="user-info">
            <h1><%= @user.name %></h1>
            <h3>Number of posts: <%= @user.posts_counter %></h3>
        </div>
    </div>
    <div class="posts">
        <% @posts.each do |post| %>
        <%= link_to user_post_path(@user, post) do %>
        <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.text %></p>
            <div>
                <p>Comments: <%= post.comments_counter %></p>
                <p>Likes: <%= post.likes_counter %></p>
            </div>
        </div>
        <% if post.comments_counter > 0 %>
        <div class="comments">
            <% post.comments.each do |comment| %>
                <div class="comment">
                    <p><%= comment.user.name %>: <%= comment.text %></p>
                </div>
            <% end %>
        </div>
        <% end %>
        <% end %>
        <% end %>
    </div>
    <div class="btn-container">
    <button class="btn"> Pagination </button>
    </div>
</div>
